{
  "author": "Florian Keller <github@floriankeller.de>",
  "dependencies": {},
  "description": "Generate a file index",
  "devDependencies": {
    "@ffflorian/prettier-config": "0.0.5",
    "@ffflorian/semantic-release-config": "0.1.4",
    "@ffflorian/tslint-config": "0.7.0",
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/git": "7.0.16",
    "@types/node": "~12",
    "husky": "3.0.5",
    "lint-staged": "9.2.5",
    "prettier": "1.18.2",
    "publish-flat": "1.3.2",
    "rimraf": "3.0.0",
    "semantic-release": "15.13.24",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.6.3"
  },
  "engines": {
    "node": ">= 10.9"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "file",
    "index",
    "fileindex",
    "tree"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.ts": [
      "tslint --project tsconfig.json --fix",
      "git add"
    ]
  },
  "main": "dist/index.js",
  "name": "@ffflorian/file-index",
  "prettier": "@ffflorian/prettier-config",
  "release": {
    "extends": "@ffflorian/semantic-release-config"
  },
  "repository": "https://github.com/ffflorian/file-index.git",
  "scripts": {
    "build": "tsc",
    "clear": "rimraf dist",
    "dist": "yarn clear && yarn build",
    "flatten": "publish-flat -o flattened",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix",
    "lint": "yarn lint:ts && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json \"**/*.ts\"",
    "postversion": "node ../node_modules/publish-flat/cli-copy.js -i package.json -o ../package.json version",
    "prettier": "prettier \"*.{json,md}\"",
    "release": "semantic-release"
  },
  "version": "2.1.0"
}
